{
    "lexicon": 1,
    "id": "ar.com.cabildoabierto.topic",
    "defs": {
      "main": {
        "type": "record",
        "key": "tid",
        "record": {
          "type": "object",
          "required": ["text", "id", "createdAt", "format"],
          "properties": {
            "id": {
              "type": "string",
              "minLength": 2,
              "maxLength": 120
            },
            "text": {
              "type": "blob"
            },
            "synonyms": {
              "type": "string",
              "minLength": 1,
              "maxLength": 10000
            },
            "categories": {
              "type": "string",
              "minLength": 1,
              "maxLength": 10000
            },
            "message": {
              "type": "string",
              "minLength": 1,
              "maxLength": 120
            },
            "title": {
              "type": "string",
              "minLength": 2,
              "maxLength": 120
            },
            "format": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50
            },
            "createdAt": {
              "type": "string",
              "format": "datetime"
            },
            "$type": {
              "type": "string",
              "const": "ar.com.cabildoabierto.topic"
            }
          }
        }
      }
    }
  }